{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Screenpipe Documentation",
  "colors": {
    "primary": "#000000",
    "light": "#333333",
    "dark": "#000000"
  },
  "favicon": "public/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "pages": [
          "pages/index",
          "pages/getting-started",
          "pages/sdk-reference",
          "pages/architecture",
          "pages/cli-reference",
          "pages/plugins",
          "pages/contributing",
          "pages/faq"
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "openapi.yaml"
      }
    ]
  },
  "logo": {
    "light": "public/favicon.ico",
    "dark": "public/favicon.ico"
  },
  "navbar": {
    "links": [
      {
        "label": "support",
        "href": "mailto:support@screenpipe.co"
      }
    ],
    "primary": {
      "type": "button",
      "label": "get app",
      "href": "https://screenpi.pe/onboarding"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/mediar-ai/screenpipe"
    }
  },
  "modeToggle": {
    "default": "dark"
  },
  "search": {
    "prompt": "search documentation..."
  }
}
