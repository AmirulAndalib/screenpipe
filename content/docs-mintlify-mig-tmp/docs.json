{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Screenpipe Documentation",
  "colors": {
    "primary": "#000000",
    "light": "#333333",
    "dark": "#000000"
  },
  "favicon": "public/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "icon": "fa-book",
        "pages": [
          {
            "group": "Getting Started",
            "icon": "fa-rocket",
            "pages": [
              "pages/index",
              "pages/getting-started"
            ]
          },
          {
            "group": "Reference",
            "icon": "fa-code",
            "pages": [
              "pages/sdk-reference",
              "pages/architecture",
              "pages/cli-reference"
            ]
          },
          {
            "group": "Extend",
            "icon": "fa-puzzle-piece",
            "pages": [
              "pages/plugins",
              "pages/contributing"
            ]
          },
          {
            "group": "Help",
            "icon": "fa-question-circle",
            "pages": [
              "pages/faq"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "fa-terminal",
        "openapi": "openapi.yaml"
      }
    ]
  },
  "logo": {
    "light": "public/favicon.ico",
    "dark": "public/favicon.ico"
  },
  "navbar": {
    "links": [
      {
        "label": "support",
        "icon": "fa-life-ring",
        "href": "mailto:support@screenpipe.co"
      }
    ],
    "primary": {
      "type": "button",
      "label": "get app",
      "icon": "fa-download",
      "href": "https://screenpi.pe/onboarding"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/mediar-ai/screenpipe"
    }
  },
  "modeToggle": {
    "default": "dark"
  },
  "search": {
    "prompt": "search documentation..."
  }
}
